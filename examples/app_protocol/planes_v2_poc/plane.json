{
  "planes_protocol_version": "0.1.0",
  "app": {
    "id": "examples.planes_v2_poc",
    "title": "Planes v2 Theme Demo",
    "icon": "assets/logo.svg",
    "web": {
      "tab_title": null,
      "tab_icon": null
    }
  },
  "plane": {
    "id": "main",
    "default_frame": "screen_tl",
    "background": {
      "color": "#0d1720"
    }
  },
  "themes": {
    "default": {
      "background": "#0d1720"
    },
    "sunset": {
      "background": "#6a1b2e"
    }
  },
  "scripts": [
    {
      "id": "handlers",
      "lang": "python",
      "src": "scripts/handlers.py"
    }
  ],
  "components": [
    {
      "id": "underlay_orange",
      "type": "svg",
      "position": {
        "x": 130,
        "y": 90,
        "frame": "screen_tl"
      },
      "size": {
        "width": {
          "unit": "px",
          "value": 700
        },
        "height": {
          "unit": "px",
          "value": 360
        }
      },
      "z_index": -1,
      "props": {
        "svg": "assets/orange_rect.svg"
      }
    },
    {
      "id": "title",
      "type": "text",
      "position": {
        "x": 0,
        "y": 20,
        "frame": "screen_tl"
      },
      "size": {
        "width": {
          "unit": "px",
          "value": 420
        },
        "height": {
          "unit": "px",
          "value": 32
        }
      },
      "z_index": 40,
      "props": {
        "text": "Planes v2 Protocol Demo",
        "color_hex": "#f5fbff",
        "hover_color_hex": "#4dd0ff",
        "font_size_px": 22,
        "align": "center",
        "theme_colors": {
          "default": "#f5fbff",
          "sunset": "#ffe680"
        }
      }
    },
    {
      "id": "cutout_viewport",
      "type": "viewport",
      "position": {
        "x": 220,
        "y": 140,
        "frame": "screen_tl"
      },
      "size": {
        "width": {
          "unit": "px",
          "value": 520
        },
        "height": {
          "unit": "px",
          "value": 240
        }
      },
      "z_index": 20,
      "props": {
        "clip": true,
        "content_ref": "underlay_orange",
        "scroll": {
          "x": 0,
          "y": 0
        }
      }
    },
    {
      "id": "theme_button_bg",
      "type": "svg",
      "position": {
        "x": 0,
        "y": 0,
        "frame": "screen_tl"
      },
      "size": {
        "width": {
          "unit": "px",
          "value": 260
        },
        "height": {
          "unit": "px",
          "value": 52
        }
      },
      "z_index": 45,
      "functions": {
        "on_press_single": "handlers::toggle_theme"
      },
      "props": {
        "svg": "assets/button_bg.svg",
        "align": "center",
        "v_align": "bottom",
        "margin_bottom_px": 20
      }
    },
    {
      "id": "theme_button",
      "type": "text",
      "position": {
        "x": 0,
        "y": 0,
        "frame": "screen_tl"
      },
      "size": {
        "width": {
          "unit": "px",
          "value": 260
        },
        "height": {
          "unit": "px",
          "value": 52
        }
      },
      "z_index": 46,
      "functions": {
        "on_press_single": "handlers::toggle_theme"
      },
      "props": {
        "text": "Toggle Theme",
        "color_hex": "#ffffff",
        "font_size_px": 18,
        "align": "center",
        "v_align": "bottom",
        "margin_bottom_px": 20,
        "theme_colors": {
          "default": "#ffffff",
          "sunset": "#ffe680"
        }
      }
    }
  ]
}
