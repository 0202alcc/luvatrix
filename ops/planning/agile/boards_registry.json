    "status_columns": [
      "Backlog",
      "Ready",
      "In Progress",
      "Review",
      "Done",
      "Blocked"
    ],
    "sort_order": [
      "priority",
      "id"
    ],
    "card_fields": [
      "id",
      "title",
      "status",
      "milestone_id",
      "depends_on"
    ],
    "wip_limits": {
      "In Progress": 3,
      "Review": 2
    }
  },
